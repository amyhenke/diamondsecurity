---
import Layout from "../layouts/Layout.astro"

const seo = {
    title: "Contact | 24/7 Diamond K9 Security",
    description:
        "Bespoke security services using Security Industry Authority (SIA) licensed personnel and National Association of Security Dog Users (NASDU) trained patrol dogs for construction sites, festivals, railways and abandoned buildings.",
    image: "../socialbanner.png",
}
---

<Layout {seo}>
    <section
        class="contactpage max-w-screen-lg mx-auto min-h-screen flex justify-center align-center flex-col text-black p-5"
    >
        <p class="text-xl uppercase">Contact</p>
        <h1 class="text-7xl mb-2">Get In Touch</h1>
        <h2 class="text-xl mb-6">
            Our friendly staff will be happy to assist you with any queries you
            may have.
        </h2>

        <form
            name="contact"
            method="POST"
            action="/success"
            data-netlify-recaptcha="true"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="w-full mt-4"
        >
            <div class="flex flex-wrap -mx-3 mb-3">
                <p class="hidden">
                    <label>
                        Don’t fill this out if you’re human: <input
                            name="bot-field"
                        />
                    </label>
                </p>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    <label
                        class="block uppercase tracking-wide text-black text-xs font-bold mb-2"
                        for="grid-first-name"
                    >
                        Name
                    </label>
                    <input
                        class="appearance-none block w-full bg-white text-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:text-black"
                        id="grid-first-name"
                        type="text"
                        name="name"
                        placeholder="Name"
                    />
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                    <label
                        class="block uppercase tracking-wide text-black text-xs font-bold mb-2"
                        for="grid-email"
                    >
                        Email
                    </label>
                    <input
                        class="appearance-none block w-full bg-white text-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:border-gray-500 focus:text-black"
                        id="grid-email"
                        name="email"
                        type="email"
                        placeholder="Email"
                    />
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    <label
                        class="block uppercase tracking-wide text-black text-xs font-bold mb-2"
                        for="grid-message"
                    >
                        Message
                    </label>
                    <textarea
                        class="no-resize appearance-none block w-full bg-white text-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:border-gray-500 h-48 resize-none focus:text-black"
                        id="grid-message"
                        name="message"
                        placeholder="Your message"></textarea>
                </div>
            </div>
            <div id="recaptcha-container" data-netlify-recaptcha="true"></div>
            <div class="md:flex md:items-center">
                <div class="md:w-1/3 mt-1">
                    <button class="button" type="submit">Send Message</button>
                </div>
                <div class="md:w-2/3"></div>
            </div>
        </form>
    </section>
</Layout>
